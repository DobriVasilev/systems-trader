// Pattern Tool Database Schema
// PostgreSQL on Neon

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// AUTH MODELS (NextAuth.js)
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   @db.Text // For credentials provider

  // Role: admin, moderator, member, dev_team
  // dev_team = autonomous Claude Code workflow
  // others = manual prompt export workflow
  role          String    @default("member")

  // Bio for profile
  bio           String?   @db.Text
  username      String?   @unique // @username for mentions

  // Security PIN (6-digit, bcrypt hashed)
  securityPin       String?   // bcrypt hashed PIN
  pinAttempts       Int       @default(0) // Failed attempts counter
  pinLockedUntil    DateTime? // Lockout expiry
  pinSetAt          DateTime? // When PIN was set

  // User preferences (stored as JSON)
  // {defaultSymbol, defaultTimeframe, swingDetectionMode, emailNotifications, collaborationAlerts}
  preferences   Json?

  // Relations
  accounts      Account[]
  sessions      Session[]

  // Pattern Tool relations
  createdSessions  PatternSession[]   @relation("SessionCreator")
  implementedSessions PatternSession[] @relation("ImplementedSessions")
  sharedSessions   SessionShare[]
  corrections      PatternCorrection[]
  comments         PatternComment[]
  events           PatternEvent[]
  patternVotes     PatternVote[]
  patternMentions  PatternCommentMention[]

  // Chat relations
  chatMessages       ChatMessage[]        @relation("ChatMessages")
  chatPresence       ChatPresence?
  sentMessages       DirectMessage[]      @relation("SentMessages")
  receivedMessages   DirectMessage[]      @relation("ReceivedMessages")
  createdChannels    ChatChannel[]        @relation("ChannelCreator")
  channelMemberships ChatChannelMember[]
  messageReactions   MessageReaction[]
  messageMentions    MessageMention[]
  messageReads       MessageRead[]
  typingIndicators   TypingIndicator[]
  chatNotifications  ChatNotification[]
  chatAttachments    ChatAttachment[]

  // E2E Encryption
  keyBundle          UserKeyBundle?
  encryptedSessions  EncryptedSession[]

  // Friend/Contact System
  sentFriendRequests     FriendRequest[] @relation("SentRequests")
  receivedFriendRequests FriendRequest[] @relation("ReceivedRequests")
  friendsAsUser1         Friendship[]    @relation("FriendUser1")
  friendsAsUser2         Friendship[]    @relation("FriendUser2")

  // Trading System
  wallets                UserWallet[]
  botConfigs             BotConfig[]
  trades                 Trade[]
  extensionKeys          ExtensionKey[]

  // Feedback System
  feedbackSubmitted      Feedback[]        @relation("UserFeedback")
  feedbackImplemented    Feedback[]        @relation("ImplementedFeedback")
  feedbackComments       FeedbackComment[] @relation("FeedbackComments")

  // Indicator Reasoning System
  indicatorReasoningSubmissions IndicatorReasoning[] @relation("IndicatorReasoningSubmissions")
  indicatorReasoningImplemented IndicatorReasoning[] @relation("ImplementedIndicatorReasoning")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Security verification codes (for email verification on sensitive actions)
model SecurityCode {
  id          String   @id @default(cuid())
  userId      String
  code        String   // 6-digit code (hashed)
  action      String   // "withdraw", "emergency_withdraw", etc.

  // Rate limiting
  attempts    Int      @default(0) // Failed verification attempts

  // Expiry
  expiresAt   DateTime
  usedAt      DateTime?

  createdAt   DateTime @default(now())

  @@index([userId, action])
  @@index([expiresAt])
}

// ============================================================================
// PATTERN SESSION
// ============================================================================

model PatternSession {
  id             String   @id // ULID

  // Display name
  name           String   // User-friendly session name

  // What we're reviewing
  symbol         String   // "BTC", "ETH"
  timeframe      String   // "1m", "5m", "15m", "1h", "4h", "1d"
  startTime      DateTime? // Optional: will be computed from candle data
  endTime        DateTime? // Optional: will be computed from candle data
  patternType    String   // "swings", "bos", "msb", "range", "false_breakout"
  patternVersion String   @default("1.0.0") // Algorithm version that generated detections
  patternSettings Json?   // Pattern-specific settings (e.g., { detection_mode: "wicks" | "closes" })

  // Candle data snapshot (stored to ensure consistency)
  candleData     Json?    // Array of OHLCV candles

  // Ownership
  createdById    String
  createdBy      User     @relation("SessionCreator", fields: [createdById], references: [id])

  // Collaboration
  isPublic       Boolean  @default(false)
  shares         SessionShare[]

  // Status
  status         String   @default("active") // active, completed, archived, submitted_for_review, implemented

  // Metadata
  description    String?  @db.Text

  // Feedback System
  feedbackType   String?  // "how-i-do-it" (pre-release explanation) or "algorithm-correction" (released indicator feedback)
  submittedForReviewAt DateTime?
  implementedAt  DateTime?
  implementedBy  String?
  implementedByUser User? @relation("ImplementedSessions", fields: [implementedBy], references: [id])

  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  detections     PatternDetection[]
  corrections    PatternCorrection[]
  comments       PatternComment[]
  events         PatternEvent[]

  @@index([createdById, status])
  @@index([patternType, status])
  @@index([createdAt])
  @@index([status, submittedForReviewAt])
}

model SessionShare {
  id         String   @id @default(cuid())
  sessionId  String
  userId     String

  // Permissions: view, comment, edit, admin
  permission String   @default("view")

  session    PatternSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())

  @@unique([sessionId, userId])
}

// ============================================================================
// PATTERN DETECTION
// ============================================================================

model PatternDetection {
  id            String   @id // ULID
  sessionId     String

  // Position on chart
  candleIndex   Int
  candleTime    DateTime
  price         Float

  // What was detected
  detectionType String   // "swing_high", "swing_low", "bos_bullish", "bos_bearish", etc.
  structure     String?  // "HH", "HL", "LH", "LL" for swings

  // Algorithm metadata
  confidence    Float?   // If algorithm provides confidence score
  metadata      Json?    // Algorithm-specific data

  // Visual position (for canvas rendering)
  canvasX       Float?
  canvasY       Float?

  // Status
  status        String   @default("pending") // pending, confirmed, rejected, moved

  // Timestamps
  createdAt     DateTime @default(now())

  // Relations
  session       PatternSession      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  corrections   PatternCorrection[]
  comments      PatternComment[]

  @@index([sessionId, detectionType])
  @@index([sessionId, status])
  @@index([candleTime])
}

// ============================================================================
// PATTERN CORRECTION
// ============================================================================

model PatternCorrection {
  id            String   @id // ULID
  sessionId     String
  detectionId   String?  // Null if adding new detection
  userId        String

  // What kind of correction
  correctionType String  // "move", "delete", "add", "confirm"

  // Original state (for moves)
  originalIndex  Int?
  originalTime   DateTime?
  originalPrice  Float?
  originalType   String?

  // Corrected state (for moves/adds)
  correctedIndex Int?
  correctedTime  DateTime?
  correctedPrice Float?
  correctedType  String?  // If changing detection type
  correctedStructure String? // If changing structure (HH/HL/LH/LL)

  // Why
  reason        String   @db.Text

  // Attachments
  attachments   Json?    // [{id, url, type, name, size}]

  // Metadata (stores original status for undo, etc.)
  metadata      Json?

  // Voting (denormalized for performance)
  upvotes       Int      @default(0)
  downvotes     Int      @default(0)
  score         Int      @default(0)  // upvotes - downvotes

  // Status
  status        String   @default("pending") // pending, applied, disputed
  resolvedAt    DateTime?
  resolvedById  String?

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  session       PatternSession     @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  detection     PatternDetection?  @relation(fields: [detectionId], references: [id], onDelete: SetNull)
  user          User               @relation(fields: [userId], references: [id])
  comments      PatternComment[]   @relation("CorrectionComments")
  votes         PatternVote[]

  @@index([sessionId, status])
  @@index([userId])
  @@index([detectionId])
  @@index([createdAt])
  @@index([score])
}

// ============================================================================
// PATTERN COMMENT
// ============================================================================

model PatternComment {
  id            String   @id // ULID
  sessionId     String
  userId        String

  // What it's attached to (one of these)
  detectionId   String?
  correctionId  String?
  parentId      String?  // For threaded replies

  // Content
  content       String   @db.Text
  attachments   Json?    // [{id, url, type, name, size}]

  // Position on canvas (for positional comments)
  canvasX       Float?
  canvasY       Float?
  candleTime    DateTime?

  // Threading metadata
  depth         Int      @default(0)  // Nesting level (0 = top level)
  path          String?  // Materialized path: "rootId/parentId/thisId" for efficient tree queries

  // Voting (denormalized for performance)
  upvotes       Int      @default(0)
  downvotes     Int      @default(0)
  score         Int      @default(0)  // upvotes - downvotes

  // Status
  resolved      Boolean  @default(false)
  resolvedAt    DateTime?
  resolvedById  String?
  isCollapsed   Boolean  @default(false)  // User collapsed this thread

  // Edit tracking
  editedAt      DateTime?
  editCount     Int      @default(0)
  originalContent String? @db.Text // Store original if edited

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  session       PatternSession     @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user          User               @relation(fields: [userId], references: [id])
  detection     PatternDetection?  @relation(fields: [detectionId], references: [id], onDelete: SetNull)
  correction    PatternCorrection? @relation("CorrectionComments", fields: [correctionId], references: [id], onDelete: SetNull)
  parent        PatternComment?    @relation("CommentReplies", fields: [parentId], references: [id], onDelete: SetNull)
  replies       PatternComment[]   @relation("CommentReplies")
  votes         PatternVote[]
  mentions      PatternCommentMention[]

  @@index([sessionId])
  @@index([detectionId])
  @@index([correctionId])
  @@index([parentId])
  @@index([userId])
  @@index([createdAt])
  @@index([score])
  @@index([path])
}

// ============================================================================
// PATTERN VOTING (Reddit-style upvote/downvote)
// ============================================================================

model PatternVote {
  id            String   @id @default(cuid())
  userId        String

  // Polymorphic: vote on either comment or correction (one must be set)
  commentId     String?
  correctionId  String?

  // Vote value: 1 = upvote, -1 = downvote
  value         Int      // 1 or -1

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment       PatternComment?    @relation(fields: [commentId], references: [id], onDelete: Cascade)
  correction    PatternCorrection? @relation(fields: [correctionId], references: [id], onDelete: Cascade)

  // Each user can only vote once per item
  @@unique([userId, commentId])
  @@unique([userId, correctionId])
  @@index([commentId])
  @@index([correctionId])
}

// ============================================================================
// PATTERN COMMENT MENTIONS (@mentions in comments)
// ============================================================================

model PatternCommentMention {
  id            String   @id @default(cuid())
  commentId     String
  userId        String   // User being mentioned

  // Notification tracking
  notified      Boolean  @default(false)
  notifiedAt    DateTime?

  createdAt     DateTime @default(now())

  // Relations
  comment       PatternComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@index([userId, notified])
}

// ============================================================================
// PATTERN EVENT (Audit Trail)
// ============================================================================

model PatternEvent {
  id            String   @id // ULID
  sessionId     String
  userId        String

  // Event details
  eventType     String   // "session_created", "detection_added", "correction_made", etc.
  entityType    String?  // "session", "detection", "correction", "comment"
  entityId      String?  // ULID of the entity

  // Full event payload
  payload       Json     // {action, before, after, metadata}

  // Optional: snapshot for replay
  canvasSnapshot Json?

  // Timestamp
  createdAt     DateTime @default(now())

  // Relations
  session       PatternSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user          User           @relation(fields: [userId], references: [id])

  @@index([sessionId, createdAt])
  @@index([entityId])
  @@index([eventType])
  @@index([userId, createdAt])
}

// ============================================================================
// CHAT SYSTEM - Production Grade with Full Features
// ============================================================================

// Chat Channels (Group Chats)
model ChatChannel {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   @default("public") // public, private
  icon        String?  // emoji or URL

  // Created by
  createdById String
  createdBy   User     @relation("ChannelCreator", fields: [createdById], references: [id])

  // Settings
  isDefault   Boolean  @default(false) // Default channels everyone can see
  archived    Boolean  @default(false)

  // Relations
  messages    ChatMessage[]
  members     ChatChannelMember[]
  attachments ChatAttachment[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([createdAt])
}

// Channel Membership with Roles
model ChatChannelMember {
  id          String   @id @default(cuid())
  channelId   String
  userId      String
  role        String   @default("member") // admin, moderator, member

  // Notifications
  muted       Boolean  @default(false)
  lastReadAt  DateTime @default(now())

  // Relations
  channel     ChatChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt    DateTime @default(now())

  @@unique([channelId, userId])
  @@index([userId])
}

// Chat Messages (enhanced)
model ChatMessage {
  id          String   @id @default(cuid())
  userId      String
  channelId   String?  // null for global/public chat
  content     String   @db.Text

  // Denormalized for performance (avoid joins on every message)
  userName    String
  userAvatar  String?
  isVip       Boolean  @default(false)

  // Attachments (multiple files supported)
  attachments Json?    // [{url, type, name, size}]

  // Reply support
  replyToId   String?
  replyTo     ChatMessage?  @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies     ChatMessage[] @relation("MessageReplies")

  // Editing
  edited      Boolean  @default(false)
  editedAt    DateTime?

  // Pinned message
  pinned      Boolean  @default(false)
  pinnedById  String?

  // Soft delete
  deleted     Boolean  @default(false)
  deletedAt   DateTime?

  // Relations
  user        User           @relation("ChatMessages", fields: [userId], references: [id], onDelete: Cascade)
  channel     ChatChannel?   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  reactions   MessageReaction[]
  mentions    MessageMention[]
  readReceipts MessageRead[]
  editHistory MessageEdit[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([channelId, createdAt])
  @@index([createdAt])
  @@index([userId])
  @@index([replyToId])
  @@index([pinned])
}

// Separate Reaction Table for Better Tracking
model MessageReaction {
  id          String   @id @default(cuid())
  messageId   String
  userId      String
  emoji       String   // üëç, ‚ù§Ô∏è, üòÇ, üòÆ, üò¢, üî•, üöÄ, üíØ

  // Relations
  message     ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@unique([messageId, userId, emoji])
  @@index([messageId])
  @@index([userId])
}

// @Mentions for Notifications
model MessageMention {
  id          String   @id @default(cuid())
  messageId   String
  userId      String   // User being mentioned

  // Relations
  message     ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@unique([messageId, userId])
  @@index([userId])
}

// Message Read Receipts
model MessageRead {
  id          String   @id @default(cuid())
  messageId   String
  userId      String

  // Relations
  message     ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  readAt      DateTime @default(now())

  @@unique([messageId, userId])
  @@index([userId])
}

// Message Edit History
model MessageEdit {
  id          String   @id @default(cuid())
  messageId   String
  previousContent String @db.Text

  // Relations
  message     ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  editedAt    DateTime @default(now())

  @@index([messageId])
}

// Typing Indicators
model TypingIndicator {
  id          String   @id @default(cuid())
  userId      String
  channelId   String?  // null for global chat, or DM recipientId
  dmUserId    String?  // For DM typing - the recipient user ID

  // Denormalized
  userName    String
  userAvatar  String?

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  startedAt   DateTime @default(now())

  @@unique([userId, channelId])
  @@index([channelId])
  @@index([dmUserId])
}

// Notifications System
model ChatNotification {
  id          String   @id @default(cuid())
  userId      String   // Recipient
  type        String   // mention, reply, dm, channel_invite

  // Related entities
  messageId   String?
  channelId   String?
  senderId    String?  // Who triggered the notification

  // Content preview
  title       String
  body        String   @db.Text
  link        String?  // URL to navigate to

  // Status
  read        Boolean  @default(false)
  readAt      DateTime?

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([userId, read])
  @@index([createdAt])
}

// Chat Presence (enhanced)
model ChatPresence {
  id          String   @id @default(cuid())
  userId      String   @unique

  // Denormalized for performance
  userName    String
  userAvatar  String?
  isVip       Boolean  @default(false)

  // Status: online, away, busy, offline
  status      String   @default("online")
  customStatus String? // "In a meeting", "Out for lunch"

  // Activity tracking
  lastSeen    DateTime @default(now())
  lastActive  DateTime @default(now()) // Last message/reaction

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([lastSeen])
}

// Direct Messages (enhanced)
model DirectMessage {
  id          String   @id @default(cuid())

  // Participants
  senderId    String
  receiverId  String

  // Content
  content     String   @db.Text
  attachments Json?    // [{url, type, name, size}]

  // Reply support
  replyToId   String?
  replyTo     DirectMessage?  @relation("DMReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies     DirectMessage[] @relation("DMReplies")

  // Editing
  edited      Boolean  @default(false)
  editedAt    DateTime?

  // Read status
  read        Boolean  @default(false)
  readAt      DateTime?

  // Soft delete (per user)
  deletedBySender   Boolean @default(false)
  deletedByReceiver Boolean @default(false)

  // Relations
  sender      User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([senderId, receiverId, createdAt])
  @@index([receiverId, read])
  @@index([createdAt])
  @@index([replyToId])
}

// Chat Attachments (files, images, audio, video)
model ChatAttachment {
  id            String   @id @default(cuid())
  userId        String
  channelId     String?
  messageId     String?

  // File info
  filename      String
  key           String   // R2 storage key
  url           String   // Public or signed URL
  thumbnailUrl  String?  // For images/videos
  contentType   String
  size          Int
  category      String   // image, video, audio, document, archive

  // Processing
  status        String   @default("pending") // pending, uploaded, processing, ready, deleted
  metadata      Json?    // Width, height, duration, etc.

  // Voice transcription (for audio/voice messages)
  transcription       String?  @db.Text // Transcribed text from Whisper
  transcriptionStatus String?  // pending, processing, completed, failed
  duration            Int?     // Duration in seconds for audio/video
  waveform            Json?    // Waveform visualization data [40 bars]

  // Timestamps
  uploadedAt    DateTime?
  deletedAt     DateTime?
  createdAt     DateTime @default(now())

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel       ChatChannel? @relation(fields: [channelId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([channelId])
  @@index([messageId])
  @@index([status])
}

// E2E Encryption Keys for DMs
model UserKeyBundle {
  id              String   @id @default(cuid())
  userId          String   @unique

  // Identity key (long-term)
  identityPublicKey   String

  // Signed prekey (medium-term, rotated periodically)
  signedPrekeyId      Int
  signedPrekeyPublic  String
  signedPrekeySignature String

  // One-time prekeys (consumed on use)
  // Stored separately in UserOneTimePrekey

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  oneTimePrekeys  UserOneTimePrekey[]
}

model UserOneTimePrekey {
  id            String   @id @default(cuid())
  keyBundleId   String
  keyId         Int
  publicKey     String
  used          Boolean  @default(false)
  usedAt        DateTime?
  createdAt     DateTime @default(now())

  keyBundle     UserKeyBundle @relation(fields: [keyBundleId], references: [id], onDelete: Cascade)

  @@unique([keyBundleId, keyId])
  @@index([keyBundleId, used])
}

// Encrypted DM Sessions (Double Ratchet state)
model EncryptedSession {
  id              String   @id @default(cuid())

  // Participants (sorted IDs for consistent lookup)
  participantIds  String   // Comma-separated sorted user IDs

  // Session state (encrypted, stored per-device)
  userId          String   // Owner of this session state
  deviceId        String

  // Double Ratchet state (encrypted with device key)
  rootKey         String   // Encrypted
  chainKey        String   // Encrypted
  messageNumber   Int      @default(0)

  // Their ratchet public key
  theirRatchetPublic String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([participantIds, userId, deviceId])
  @@index([userId])
}

// Safety Numbers for verification
model SafetyNumber {
  id              String   @id @default(cuid())

  // Users involved (sorted)
  user1Id         String
  user2Id         String

  // Fingerprint (derived from identity keys)
  fingerprint     String

  // Verification status
  verifiedByUser1 Boolean  @default(false)
  verifiedByUser2 Boolean  @default(false)
  verifiedAt      DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([user1Id, user2Id])
}

// ============================================================================
// TRADING SYSTEM - Wallets, Bots, Trades
// ============================================================================

// User's encrypted wallets for trading
model UserWallet {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  nickname      String   // "Main Account", "Bot Account", "Test Wallet"
  address       String   // Public wallet address (for display)
  encryptedKey  String   @db.Text // AES-256-GCM encrypted private key
  salt          String   // Salt for key derivation (Argon2id)

  // Metadata
  isDefault     Boolean  @default(false) // Default wallet for manual trading
  lastUsedAt    DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  bots          BotConfig[]
  trades        Trade[]
  extensionKeys ExtensionKey[]

  @@unique([userId, address]) // Can't add same wallet twice
  @@index([userId])
}

// Bot configurations for automated trading
model BotConfig {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletId      String
  wallet        UserWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  name          String   // "BOS Breakout Bot", "Mean Reversion ETH"
  symbol        String   // "BTC", "ETH", "SOL"
  strategyType  String   // "bos-breakout", "mean-reversion", "75-retracement"

  // Strategy parameters (JSON for flexibility)
  parameters    Json     // Strategy-specific settings

  // Risk management
  riskSettings  Json     // { riskPerTrade: 1, maxDailyLoss: 5, leverage: 10, maxPositions: 3 }

  // Status
  status        String   @default("stopped") // "running", "stopped", "error", "paused"
  statusMessage String?  // Error message or status details

  // Execution tracking
  lastRunAt     DateTime?
  lastTradeAt   DateTime?
  totalTrades   Int      @default(0)
  winningTrades Int      @default(0)
  losingTrades  Int      @default(0)
  totalPnl      Float    @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  trades        Trade[]

  @@index([userId, status])
  @@index([walletId])
}

// Trade history (manual and bot trades)
model Trade {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletId      String
  wallet        UserWallet @relation(fields: [walletId], references: [id])
  botId         String?  // Null for manual trades
  bot           BotConfig? @relation(fields: [botId], references: [id], onDelete: SetNull)

  // Trade details
  symbol        String   // "BTC", "ETH"
  side          String   // "long" or "short"
  size          Float    // Position size in base currency
  leverage      Int      @default(1)

  // Prices
  entryPrice    Float
  exitPrice     Float?
  stopLoss      Float?
  takeProfit    Float?

  // P&L
  pnl           Float?   // Realized P&L in USD
  pnlPercent    Float?   // Percentage gain/loss
  fees          Float?   // Trading fees paid

  // Status
  status        String   // "open", "closed", "cancelled", "liquidated"
  closeReason   String?  // "tp_hit", "sl_hit", "manual", "liquidated", "bot_signal"

  // Hyperliquid order IDs
  entryOrderId  String?
  exitOrderId   String?
  slOrderId     String?
  tpOrderId     String?

  // Timestamps
  openedAt      DateTime @default(now())
  closedAt      DateTime?

  // Metadata
  notes         String?  @db.Text // Trade notes (timeframe, source, etc.)
  metadata      Json?    // Additional trade data (signals, patterns, etc.)

  @@index([userId, status])
  @@index([walletId])
  @@index([botId])
  @@index([symbol])
  @@index([openedAt])
}

// Extension API keys for TradingView bridge
model ExtensionKey {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletId      String
  wallet        UserWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  // API Key (hashed for security comparison, or stored encrypted)
  key           String   @unique // API key for authentication
  name          String   // "TradingView Chrome Extension"

  // Default trade settings for extension
  asset         String   @default("BTC")
  riskAmount    Float    @default(1.0)
  leverage      Int      @default(25)

  // Wallet password (encrypted, needed for trade execution)
  walletPassword String? @db.Text // AES encrypted wallet password

  // Usage tracking
  lastUsedAt    DateTime?
  usageCount    Int      @default(0)

  // Status
  active        Boolean  @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([walletId])
}

// ============================================================================
// FRIEND/CONTACT SYSTEM (Telegram-style DM requests)
// ============================================================================

// Friend Request - required before DM
model FriendRequest {
  id          String   @id @default(cuid())
  senderId    String
  receiverId  String

  // Initial message with request
  message     String?  @db.Text

  // Status: pending, accepted, declined, blocked
  status      String   @default("pending")

  // Relations
  sender      User     @relation("SentRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver    User     @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  respondedAt DateTime?

  @@unique([senderId, receiverId])
  @@index([receiverId, status])
  @@index([senderId])
}

// Friendship - established after request accepted
model Friendship {
  id          String   @id @default(cuid())

  // Always store with smaller ID as user1 for consistency
  user1Id     String
  user2Id     String

  // Relations
  user1       User     @relation("FriendUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2       User     @relation("FriendUser2", fields: [user2Id], references: [id], onDelete: Cascade)

  // Blocked status (by either user)
  blockedByUser1 Boolean @default(false)
  blockedByUser2 Boolean @default(false)

  createdAt   DateTime @default(now())

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
}

// ============================================================================
// UNIVERSAL FEEDBACK SYSTEM - Right-click anywhere to report issues
// ============================================================================

enum FeedbackType {
  BUG_REPORT
  FEATURE_REQUEST
  UI_UX_ISSUE
  PERFORMANCE_ISSUE
  QUESTION
  OTHER
}

enum FeedbackStatus {
  PENDING
  IN_PROGRESS
  IMPLEMENTED
  CLOSED
}

enum ImplementationStatus {
  PENDING
  PROCESSING
  ANALYZING
  IMPLEMENTING
  TESTING
  DEPLOYING
  COMPLETED
  FAILED
}

model Feedback {
  id              String         @id @default(cuid())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Ownership
  userId          String
  user            User           @relation("UserFeedback", fields: [userId], references: [id], onDelete: Cascade)

  // Type and priority
  type            FeedbackType   @default(OTHER)
  priority        Int            @default(0) // User-set or admin-set priority
  status          FeedbackStatus @default(PENDING)

  // Trading Indicator Feedback (optional, for indicator-specific feedback)
  indicator       String?        // "BOS", "Swings", "MSB", "CHoCH", "FVG", "Liquidity", "POI", "Trend", "MTF", "Structure", "Other"
  customIndicator String?        // Custom indicator name if indicator === "Other"

  // Content - Voice OR Text
  textContent     String?        @db.Text // Text description
  voiceAttachmentId String?      // Voice message attachment ID
  voiceTranscription String?     @db.Text // Auto-transcribed from voice

  // Additional details
  title           String?        // Optional title
  stepsToReproduce String?      @db.Text
  expectedBehavior String?      @db.Text
  actualBehavior   String?      @db.Text

  // Context (auto-captured)
  pageUrl         String?        // URL where feedback was submitted
  pagePath        String?        // Route path
  userAgent       String?        @db.Text // Browser info
  screenResolution String?       // e.g., "1920x1080"
  viewport        String?        // e.g., "1200x800"

  // Attachments (screenshots, videos, documents)
  attachments     FeedbackAttachment[]
  comments        FeedbackComment[]

  // Implementation
  implementedAt   DateTime?
  implementedById String?
  implementedBy   User?          @relation("ImplementedFeedback", fields: [implementedById], references: [id])
  implementationNotes String?    @db.Text

  // Autonomous Implementation System
  implementationStatus ImplementationStatus @default(PENDING)
  claudeSessionId      String?              // Claude Code session tracking
  implementationLog    Json?                // Detailed log of implementation steps
  implementationPlan   Json?                // Parsed plan with tasks
  currentTask          String?              // Currently executing task
  deploymentStatus     String?              // Deployment status (queued, deploying, deployed, failed)
  deploymentUrl        String?              // Vercel deployment URL
  notificationSent     Boolean              @default(false) // Email notification sent
  processedAt          DateTime?            // When Claude started processing
  completedAt          DateTime?            // When implementation completed
  errorMessage         String?              @db.Text // Last error if failed
  retryCount           Int                  @default(0) // Number of retry attempts
  maxRetries           Int                  @default(3) // Max retry attempts before giving up

  @@index([userId, status])
  @@index([type, status])
  @@index([status, createdAt])
  @@index([priority])
  @@index([implementationStatus, processedAt])
}

model FeedbackAttachment {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  feedbackId  String
  feedback    Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)

  // File info (reuses R2 upload infrastructure)
  filename    String
  url         String
  contentType String
  size        Int
  category    String   // screenshot, video, document, voice

  // For images/videos
  width       Int?
  height      Int?
  duration    Int?     // For videos/voice

  @@index([feedbackId])
}

model FeedbackComment {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  feedbackId  String
  feedback    Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)

  userId      String
  user        User     @relation("FeedbackComments", fields: [userId], references: [id], onDelete: Cascade)

  content     String   @db.Text
  isInternal  Boolean  @default(false) // Admin-only comments

  editedAt    DateTime?

  @@index([feedbackId, createdAt])
  @@index([userId])
}

