{
  "manifest_version": 3,
  "name": "TradingView Bridge",
  "version": "1.8.0",
  "description": "Connects TradingView/Hyperliquid/Drift chart position tool to trading app",
  "permissions": [],
  "host_permissions": ["*://www.tradingview.com/*", "*://tradingview.com/*", "*://app.hyperliquid.xyz/*", "*://drift.trade/*", "*://app.drift.trade/*", "http://localhost:3456/*"],
  "content_scripts": [
    {
      "matches": ["*://www.tradingview.com/*", "*://tradingview.com/*", "*://app.hyperliquid.xyz/*", "*://drift.trade/*", "*://app.drift.trade/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
